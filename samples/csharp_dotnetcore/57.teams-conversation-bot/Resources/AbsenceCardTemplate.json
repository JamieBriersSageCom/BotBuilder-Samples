{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "${absence.teamMemberName} ${title}",
          "weight": "bolder",
          "size": "medium"
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "${absence.teamMemberImg}",
                  "size": "Small",
                  "style": "Person"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${absence.teamMemberName}",
                  "weight": "Bolder",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "spacing": "None",
                  "text": "Created {{DATE(${createdUtc}, SHORT)}}",
                  "isSubtle": true,
                  "wrap": true
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "wrap": true,
          "text": "${description}"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Reason",
              "value": "${absence.reason}"
            },
            {
              "title": "Start",
              "value": "${absence.start}"
            },
            {
              "title": "End",
              "value": "${absence.end}"
            },
            {
              "title": "Duration",
              "value": "${absence.duration}"
            }
          ]
        }
      ]
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Approve",
          "style": "positive"
        },
        {
          "type": "Action.Submit",
          "title": "Reject",
          "style": "destructive"
        },
        {
          "type": "Action.OpenUrl",
          "title": "Open In Sage People",
          "url": "approveUrl"
        }
      ]
    }
  ]
}
