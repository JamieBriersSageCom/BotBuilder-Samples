{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "${$root.absence.teamMemberName} ${$root.title}",
          "weight": "bolder",
          "size": "medium"
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "${$root.absence.teamMemberImg}",
                  "size": "Small",
                  "style": "Person"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${$root.absence.teamMemberName}",
                  "weight": "Bolder",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "spacing": "None",
                  "text": "Created {{DATE(${$root.createdUtc}, SHORT)}}",
                  "isSubtle": true,
                  "wrap": true
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "wrap": true,
          "text": "${description}"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Reason",
              "value": "${absence.reason}"
            },
            {
              "title": "Start",
              "value": "${absence.start}"
            },
            {
              "title": "End",
              "value": "${absence.end}"
            },
            {
              "title": "Duration",
              "value": "${absence.duration}"
            }
          ]
        }
      ]
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Execute",
          "fallback": "Action.Submit",
          "verb": "approve",
          "title": "Approve",
          "style": "positive"
        },
        {
          "type": "Action.Submit",
          "title": "Reject",
          "style": "destructive"
        },
        {
          "type": "Action.OpenUrl",
          "title": "Open In Sage People",
          "url": "approveUrl"
        },
        {
          "type": "Action.Submit",
          "title": "Auth?",
          "data": {
            "msteams": {
              "type": "signin",
              "value": "https://enterprise-app-6292-dev-ed.cs119.my.salesforce.com/services/oauth2/authorize?client_id=3MVG9xqN3LZmHU7ne59iUJuqKXpcWor5Wo_yEXK58uRsBPWKeSZMhTDkdsajSTD97gku_7Pdh4vMydTNndDCz&redirect_uri=https://login.salesforce.com/services/oauth2/callback&response_type=code"
            }
          }
        }
      ]
    }
  ]
}